<div id="<%= dom_id user %>" class="card">
  <ul class="list-group list-group-flush">
    <li class="list-group-item">
      <strong>Name:</strong>
      <%= user.name %>
    </li>
    <li class="list-group-item">
      <strong>Age:</strong>
      <%= user.age %>
    </li>
    <li class="list-group-item">
      <strong>Gender:</strong>
      <%= user.gender %>
    </li>
    <li class="list-group-item">
      <strong>Email:</strong>
      <%= user.email %>
    </li>
  </ul>
</div>
