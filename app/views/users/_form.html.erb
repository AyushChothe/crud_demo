<%= form_with(model: user,class:"card") do |form| %>
  <div class="card-body">
    <% if user.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(user.errors.count, "Error") %></h2>
        <% user.errors.each do |error| %>
          <div class="alert alert-warning" role="alert"><%= error.full_message %></div>
        <% end %>
      </div>
    <% end %>
    <div class="mb-3">
      <%= form.label :name,class:"form-label" %>
      <%= form.text_field :name ,class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :age , class:"form-label" %>
      <%= form.number_field :age,class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :gender,class:"form-label" %>
      <%= form.text_field :gender,class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :email ,class:"form-label" %>
      <%= form.text_field :email,class:"form-control" %>
    </div>
    <div class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to "Back to users", users_path,class:"btn btn-secondary" %>
    </div>
  </div>
<% end %>
