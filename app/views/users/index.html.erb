<% if !notice.nil? %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>
<h1 class="text-center">Users</h1>
<table id="users" class="table table-bordered table-hover table-dark table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%=user.name %></td>
        <td><%=user.age %></td>
        <td><%=user.gender %></td>
        <td><%=user.email %></td>
        <td> <%= link_to "Show", user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New user", new_user_path,class:"btn btn-primary" %>
